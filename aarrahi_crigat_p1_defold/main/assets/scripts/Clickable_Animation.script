function init(self)
	msg.post(".", "acquire_input_focus")
end

function on_input(self, action_id, action)
	local original_scale = go.get_scale()
	if action_id == hash("button_left") and action.pressed then
		local pressed_scale = go.get_scale()
		go.animate(".", "scale", go.PLAYBACK_ONCE_PINGPONG, go.EASING_OUTSINE / 5, 1, 0.5)
	end
end
